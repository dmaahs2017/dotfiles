" global clipboard
set clipboard=unnamed

" line numbers
set number
set rnu

" tabs
set shiftwidth=4
set softtabstop=4
set tabstop=4
set expandtab

" splits
set splitright
set splitbelow

" proper command searching
set incsearch
set ignorecase
set smartcase
set gdefault

" MISC
set encoding=utf-8
set scrolloff=2
set hidden
set nojoinspaces
set nohlsearch
